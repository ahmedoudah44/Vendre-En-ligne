@model IEnumerable<Echri3endy_Web.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Liste de Type</h2>

<p>
    @Html.ActionLink("Create Nouvelle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.categoryNom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.categoryDiscription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.categoryNom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.categoryDiscription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Supprimer", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
