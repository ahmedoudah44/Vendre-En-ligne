@model IEnumerable<Echri3endy_Web.Models.Produit>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>List Produits</h2>

<p>
    @Html.ActionLink("Ajoute produit", "Create")
</p>
<table class="table tabel-stripped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.category.categoryNom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProduitTiter)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProduitConteni)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.prix)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProduitImager)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.category.categoryNom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProduitTiter)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProduitConteni)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.prix)
        </td>
        <td>
            <img src="~/Uploads/@Html.DisplayFor(modelItem => item.ProduitImager)"
                            class="thumbnail" style="max-width:48px; height:48px;" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
